{% import "blog/macros.j2" as blog %}

{%- if not config.hide_title %}
  {{ rst.html_title }}
{%- endif %}

{{ blog.byline(ctx) }}

{%- for module in config.before -%}
  {% include module.include %}
{%- endfor -%}

{% if rst.fragment %}
  <div class="body">
    {{ rst.fragment }}
  </div>
{% endif %}

{%- for module in config.after -%}
  {% include module.include %}
{%- endfor -%}

{% if config.comments %}
  {% include "_comments.html.j2" %}
{% endif %}
